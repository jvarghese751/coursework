<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addLeaguesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="18dp"
        android:text="Add Leagues to DB"
        app:layout_constraintBottom_toTopOf="@+id/searchClubsByLeagueBtn"
        app:layout_constraintStart_toStartOf="@+id/searchClubsByLeagueBtn" />

    <Button
        android:id="@+id/searchClubsByLeagueBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="167dp"
        android:text="Search for Clubs by League"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchClubsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        android:text="Search for Clubs"
        app:layout_constraintStart_toStartOf="@+id/searchClubsByLeagueBtn"
        app:layout_constraintTop_toBottomOf="@+id/searchClubsByLeagueBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>